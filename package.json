{
  "name": "four-loop",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "tsx scripts/build.ts --prod",
    "build:dev": "tsx scripts/build.ts --dev",
    "build:ci": "tsx scripts/build.ts --ci",
    "build:scss": "tsx scripts/build-scss.ts",
    "build:scss:watch": "tsx scripts/build-scss.ts --watch",
    "build:scss:validate": "tsx scripts/build-scss.ts --validate",
    "start": "next start",
    "lint": "npm run lint:js && npm run lint:styles && npm run format:check",
    "lint:js": "next lint",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:styles -- --fix",
    "lint:check": "npm run lint:js && npm run lint:styles",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "build:local": "npm run format && npm run lint:fix && npm run type-check && next build",
    "prepare": "husky",
    "setup:automation": "tsx scripts/setup-automation.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:generate-templates": "tsx scripts/generate-test-templates.ts",
    "test:e2e": "playwright test",
    "test:e2e:ci": "CI=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "playwright test accessibility.spec.ts",
    "test:accessibility:ci": "CI=true playwright test accessibility.spec.ts",
    "test:all": "npm run test && npm run test:e2e",
    "docs:generate": "tsx scripts/generate-docs.ts",
    "docs:update": "npm run docs:generate && git add docs/ README.md",
    "docs:ci": "npm run docs:generate",
    "docs:validate": "tsx scripts/validate-docs.ts",
    "docs:api": "npm run docs:generate && echo 'ðŸ“„ API documentation generated at docs/API_DOCUMENTATION.md'",
    "docs:deps": "npm run docs:generate && echo 'ðŸ“Š Dependency report generated at docs/DEPENDENCY_REPORT.md'",
    "docs:open:api": "npm run docs:api && open docs/API_DOCUMENTATION.md",
    "docs:open:deps": "npm run docs:deps && open docs/DEPENDENCY_REPORT.md",
    "tokens:generate": "tsx scripts/build-scss.ts",
    "tokens:watch": "tsx scripts/build-scss.ts --watch",
    "tokens:validate": "tsx scripts/build-scss.ts --validate",
    "jsdoc:enhance": "tsx scripts/enhance-jsdoc.ts enhance",
    "jsdoc:guide": "tsx scripts/enhance-jsdoc.ts help",
    "jsdoc:validate": "npm run standards:check | grep -A 20 'JSDoc'",
    "deps:check": "npm outdated",
    "deps:update": "npm update && npm audit fix",
    "deps:report": "npm run docs:generate && cat docs/DEPENDENCY_REPORT.md",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "audit:colors": "./scripts/audit-colors.sh",
    "standards:enforce": "tsx scripts/enforce-standards.ts",
    "standards:check": "tsx scripts/enforce-standards.ts --check-only --skip-e2e",
    "standards:fix": "tsx scripts/enforce-standards.ts --auto-fix",
    "standards:quick": "tsx scripts/enforce-standards.ts --check-only --skip-e2e --skip-accessibility",
    "maintenance:full": "npm run docs:generate && npm run standards:enforce && npm run quality:check",
    "maintenance:quick": "npm run docs:generate && npm run standards:check",
    "performance:budget": "next build --profile && npm run performance:check",
    "performance:analyze": "ANALYZE=true npm run build",
    "performance:check": "tsx scripts/check-performance-budget.ts",
    "performance:vitals": "tsx scripts/measure-core-web-vitals.ts",
    "quality:check": "npm run lint:check && npm run type-check && npm run test && npm run security:audit && npm run performance:budget",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:full": "npm run quality:fix && npm run test:coverage",
    "prerelease": "npm run quality:check && npm run build",
    "validate": "npm run quality:check && npm run test:e2e && npm run test:accessibility"
  },
  "dependencies": {
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^6.0.1",
    "reveal.js": "^5.2.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^7.1.2",
    "@mui/material": "^7.1.2",
    "@playwright/test": "^1.53.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-test-renderer": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.17",
    "axe-core": "^4.10.3",
    "axe-playwright": "^2.1.0",
    "babel-jest": "^30.0.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.3.4",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.2",
    "jest-preset-typescript": "^1.2.0",
    "lighthouse": "^12.6.1",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "react-test-renderer": "^19.1.0",
    "sass": "^1.71.0",
    "stylelint": "^16.2.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
